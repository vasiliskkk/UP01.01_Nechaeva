<Page x:Class="UP01._01_Nechaeva.Pages.EditAdd"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP01._01_Nechaeva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="EditAdd">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="193*"/>
                <ColumnDefinition Width="207*"/>
            </Grid.ColumnDefinitions>

            <Label
                Content="Город"
                Grid.Column="0"
                Height="59"
                Width="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="0,150,68,0"/>

            <Label
                Content="Категория"
                Grid.Column="0"
                Height="55"
                Width="105"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="0,200,30,0"/>

            <Label
                Content="Название"
                Grid.Column="0"
                Height="55"
                Width="105"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="0,250,36,0"/>

            <Label
                Content="Описание"
                Grid.Column="0"
                Height="55"
                Width="105"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="0,290,32,0"/>

            <Label
                Content="Фото"
                Grid.Column="0"
                Height="60"
                Width="100"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="0,350,73,0"/>

            <ComboBox
                x:Name="cbCity"
                Grid.Column="1"
                Height="38"
                Width="210"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,150,0,0"
                DisplayMemberPath = "CityName"/>

            <ComboBox
                x:Name="cbCategory"
                Grid.Column="1"
                Height="38"
                Width="210"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,200,0,0"
                DisplayMemberPath = "CategoryName"/>

            <TextBox
                x:Name="tbName"
                Grid.Column="1"
                Height="38"
                Width="210"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,250,0,0"/>

            <TextBox
                x:Name="tbDescription"
                Grid.Column="1"
                Height="38"
                Width="210"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,300,0,0"/>

            <TextBox
                x:Name="tbPhoto"
                Grid.Column="1"
                Height="38"
                Width="210"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Right"
                Margin="20,350,0,0"/>
        </Grid>

        <Button
            x:Name="btnDelete"
            Grid.Row="1"
            Content="Удалить"
            Height="40"
            Width="160"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="btnDelete_Click"
            Margin="225,0,0,0"/>

        <Button
            x:Name="btnBack"
            Grid.Row="1"
            Content="Назад"
            Height="40"
            Width="160"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="btnBack_Click"/>

        <Button
            x:Name="btnSave"
            Grid.Row="1"
            Content="Сохранить"
            Height="40"
            Width="160"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Click="btnSave_Click"/>
    </Grid>
</Page>