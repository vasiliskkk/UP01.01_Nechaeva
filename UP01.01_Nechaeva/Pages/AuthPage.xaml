<Page x:Class="UP01._01_Nechaeva.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:UP01._01_Nechaeva.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuthPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="369*"/>
                <ColumnDefinition Width="431*"/>
            </Grid.ColumnDefinitions>

            <Label
                Content="Пароль"
                Grid.Column="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Height="52"
                Width="100"
                HorizontalContentAlignment="Right"
                Margin="0,269,25,0"/>

            <TextBox
                x:Name="tbLogin"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="35"
                Width="160"
                HorizontalContentAlignment="Right" Margin="0,203,0,0"
                />

            <PasswordBox
                x:Name="pbPassword"
                Grid.Column="1"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Height="35"
                Width="160"
                HorizontalContentAlignment="Right"
                Margin="0,272,0,0"
                />
            <Label
                Content="Логин"
                Grid.Column="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Height="50"
                Width="100"
                HorizontalContentAlignment="Right"
                Margin="0,200,33,0" RenderTransformOrigin="0.4,0.176"/>
        </Grid>

        <Button
            Grid.Row="1"
            Width="160"
            Height="40"
            Content="Авторизоваться"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Click="Button_Click"/>

        <Button
            Grid.Row="1"
            Width="160"
            Height="40"
            Content="Назад"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Click="Button_Click_1"/>
    </Grid>
</Page>
