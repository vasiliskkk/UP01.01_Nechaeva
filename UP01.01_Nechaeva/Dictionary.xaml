<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Grid">
        <Setter Property="Background" Value="White"/>
    </Style>

    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="Constantia"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="#37474f"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Height" Value="22"/>
    </Style>

    <Style TargetType="Label" x:Key="lblMedium">
        <Setter Property="FontFamily" Value="Constantia"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontSize" Value="16"/>
    </Style>

    <Style TargetType="Label" x:Key="lblLarge">
        <Setter Property="FontFamily" Value="Constantia"/>
        <Setter Property="Height" Value="38"/>
        <Setter Property="FontSize" Value="18"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="Constantia"/>
        <Setter Property="FontSize" Value="15"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Height" Value="22"/>
        <Setter Property="Background" Value="#ff9c1a"/>
    </Style>

    <Style TargetType="Button" x:Key="btnMedium">
        <Setter Property="FontFamily" Value="Constantia"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Height" Value="30"/>
    </Style>

    <Style TargetType="Button" x:Key="btnLarge">
        <Setter Property="FontFamily" Value="Constantia"/>
        <Setter Property="FontSize" Value="10"/>
        <Setter Property="Height" Value="38"/>
    </Style>

    <Style TargetType="CheckBox">
        <Setter Property="FontFamily" Value="Constantia"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#37474f"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Height" Value="22"/>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="FontFamily" Value="Constantia"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Foreground" Value="#37474f"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Height" Value="22"/>
    </Style>

    <Style TargetType="ComboBox">
        <Setter Property="FontFamily" Value="Constantia"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#57474f"/>
        <Setter Property="Margin" Value="20"/>
        <Setter Property="Padding" Value="10"/>
        <Setter Property="Height" Value="22"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="Constantia"/>
        <Setter Property="FontSize" Value="19"/>
    </Style>

    <Style TargetType="PasswordBox">
        <Setter Property="FontFamily" Value="Constantia"/>
        <Setter Property="FontSize" Value="19"/>
    </Style>
</ResourceDictionary>